{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@": ["../../src"],
      "@/*": ["../../src/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
} 