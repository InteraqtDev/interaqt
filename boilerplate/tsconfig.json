{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@": ["../../src"],
      "interaqt": ["../../src"],
      "@runtime": ["../../src/runtime"],
      "@shared": ["../../src/shared"],
      "@storage": ["../../src/storage"]
    }
  },
  "include": [
    "backend/**/*",
    "frontend/**/*",
    "initialData.ts",
    "server.ts",
    "index.ts",
    "install.ts"
  ]
} 